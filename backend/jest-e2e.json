{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/src/**/*.e2e-spec.{ts,js}"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid)/)"
  ],
  "coverageDirectory": "./coverage-e2e",
  "coveragePathIgnorePatterns": [
    "test.helper.ts",
    "dto/*",
    "__data__.ts",
    "__test.helper__.ts"
  ],
  "coverageReporters": ["text", "cobertura", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
